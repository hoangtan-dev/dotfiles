[init]
	defaultBranch = main
[credential]
	helper = store
[core]
	editor = nvim
[gpg]
	format = ssh
[commit]
	gpgsign = false
[merge]
	ff = true
[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection
    line-numbers = true

[merge]
    conflictstyle = zdiff3
